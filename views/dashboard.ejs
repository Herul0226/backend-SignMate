<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard SignMate</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-firestore.js"></script>
  <script src="/js/app.js"></script>
</head>
<body>
  <div class="header">
    <h1>Admin Dashboard SignMate</h1>
  </div>

  <div class="sidebar">
    <a href="#home">Home</a>
    <a href="#users">Users</a>
    <a href="#settings">Settings</a>
    <a href="#logout" id="logout-button" style="display: none;">Logout</a>
  </div>

  <div class="content">
    <div id="user-details">
      <p id="welcome-message"></p>
    </div>

    <div id="users-table">
      <h2>Users List</h2>
      <table>
        <thead>
          <tr>
            <th>Display Name</th>
            <th>Email</th>
            <th>UID</th>
          </tr>
        </thead>
        <tbody id="users-list">
          <!-- User data will be appended here -->
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
